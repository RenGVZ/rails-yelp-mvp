<div class="background-container">
  <div class="restaurant-container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%= form_for(@restaurant) do |f| %>
          <div class="form-group">
            <%= f.label :name, style: "color: white; font-weight: bold;"%>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :category, style: "color: white; font-weight: bold;"%>
            <%= f.text_field :category, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :address, style: "color: white; font-weight: bold;" %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :pic, style: "color: white; font-weight: bold;" %>
            <%= f.text_field :pic, class: 'form-control' %>
          </div>

          <%= f.submit class: 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>